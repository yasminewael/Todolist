function noTasks() {
  let noShowElement = document.createElement("div");
  let noShowMsg = document.createTextNode("No Tasks To Show");
  noShowElement.appendChild(noShowMsg);
  noShowElement.className = "no-tasks-message";
  listContainer.appendChild(noShowElement);
}

function calcTasks(){
    tasksActive.innerHTML = document.querySelectorAll(".todo-list .content-item").length;
    completed.innerHTML = document.querySelectorAll(".todo-list .finished").length;
}